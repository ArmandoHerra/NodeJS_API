{
    "compilerOptions": {
        "outDir": "server",
        "allowJs": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "sourceRoot": "./server/sourceMaps",
        "mapRoot": "./server/sourceMaps"
    },
    "include": ["./src"],
    "exclude": ["node_modules", "./src/interfaces.ts"]
}
